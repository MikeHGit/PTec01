@model List<PruebaTecnica.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="card">
    <div class="card-header">
        <h5>Lista de Usuarios</h5>
    </div>

    <div class="card-body">
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Fecha de Creación</th>
                    <th>Fecha de Modificacón</th>                    
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Usuario1</td>
                        <td>@usuario.FechaCreacion</td>
                        <td>@usuario.FechaModificacion</td>
                        <td>
                            <a class="btn btn-primary btn-sm"
                           asp-controller="Usuario"
                           asp-action="Actualizar"
                           asp-route-Identificador="@usuario.Identificador"
                               title="Editar"><i class="bi bi-pen" style="font-size: 1rem"></i></a>

                            <a class="btn btn-danger btn-sm"
                           asp-controller="Usuario"
                           asp-action="Eliminar"
                           asp-route-Identificador="@usuario.Identificador"
                               title="Eliminar"><i class="bi bi-trash3" style="font-size: 1rem"></i></a>
                        </td>
                    </tr>

                }
            </tbody>

        </table>
    </div>
</div>