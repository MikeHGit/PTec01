@model List<PruebaTecnica.Models.Persona>
@{
    ViewData["Title"] = "Home Page";
}

<div class="card">
    <div class="card-header">
        <h5>Lista de Personas</h5>
    </div>

    <div class="card-body">
        <a class="btn btn-success btn-sm"
           asp-controller="Home"
           asp-action="Guardar"
           asp-route-Identificador="0"
           title="Agregar Persona"><i class="bi bi-person-plus" style="font-size: 1rem"></i> Agregar</a>
        <hr />
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Identificación</th>
                    <th>Tipo</th>
                    <th>Email</th>
                    <th>Modificación</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var persona in Model)
                {
                    <tr>
                        <td>@persona.Nombres</td>
                        <td>@persona.Apellidos</td>
                        <td>@persona.NumeroIdentificacion</td>
                        <td>@persona.TipoIdentificacion</td>
                        <td>@persona.Email</td>
                        <td>@persona.FechaModificacion</td>
                        <td>
                            <a class="btn btn-primary btn-sm"
                               asp-controller="Home"
                               asp-action="Guardar"
                               asp-route-Identificador="@persona.Identificador"
                               title="Editar"><i class="bi bi-pen" style="font-size: 1rem"></i></a>

                            <a class="btn btn-danger btn-sm"
                               asp-controller="Home"
                               asp-action="Eliminar"
                               asp-route-Identificador="@persona.Identificador"
                               title="Eliminar"><i class="bi bi-trash3" style="font-size: 1rem"></i></a>
                        </td>
                    </tr>

                }
            </tbody>

        </table>
    </div>
</div>